                            <label for="file" class="btn btn-primary">Upload a profile photo!</label>
                            <style>
                                .inputfile {
                                    width: 0.1px;
                                    height: 0.1px;
                                    opacity: 0;
                                    overflow: hidden;
                                    position: absolute;
                                    z-index: -1;
                                }
                            </style>
